<article>
  <h2>Productos</h2>
  <div id="cartContainer">
    {{#each products}}
      <div
        class="cartCard"
        data-prodId="{{product._id}}"
        data-quantity="{{quantity}}"
      >
        <img src="{{product.thumbnail}}" alt={{product.title}} />
        <h3>{{product.title}}</h3>
        <p>Precio: {{product.price}}</p>
        <p>CÃ³digo: {{product.code}}</p>
        <h4>Cantidad:
          <button class="substract">-</button>{{quantity}}<button
            class="add"
          >+</button></h4>
        <h4>Precio total: {{totalPrice}}</h4>
        <button class="deleteProduct">Eliminar</button>
      </div>
    {{/each}}
    <button id="cleanCart" data-cartId="{{user.cart}}">Limpiar carrito</button>
    <button id="comprar">Comprar</button>
  </div>
</article>