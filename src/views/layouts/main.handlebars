<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{#each css}}
      <link rel="stylesheet" href="/css/{{this}}" />
    {{/each}}
    <title>{{title}}</title>
  </head>
  <body>
    <header
      style="text-align: center; background-color: darkolivegreen; color: white"
    >
      <h1>{{endPoint}}</h1>
      <div class="navbarLogin">
        {{#if loggedIn}}
          <p>Bienvenido/a {{user.firstName}} {{user.lastName}}</p>
          <p>email: {{user.email}}</p>
          <p>Rol: {{user.role}}</p>
          {{#if isAdmin}}
            <a href="/addProducts">Agregar productos</a>
          {{/if}}
          {{#if user}}
            <a href="/users/{{uId}}/documents">Cargar archivos</a>
          {{/if}}
          <a href="/api/sessions/logoutView">Logout</a>
        {{else}}
          <a href="/login">Iniciar sesi√≥n</a>
          <a href="/register">Registrarse</a>
        {{/if}}
      </div>
    </header>
    <main>

      {{{body}}}
    </main>

    {{#if useSweetAlert}}
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{/if}}
    {{#each scripts}}
      <script src="/js/{{this}}"></script>
    {{/each}}
  </body>
</html>